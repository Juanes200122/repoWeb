        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        gap: 20px;
        &::after {
            content: '';
            width: 50px;
            height: 50px;
            background-color: #0dc15253;
            position: absolute;
            border-radius: 50%;
            animation: pulse 1s linear infinite;
            z-index: -1;
        }
        
        & img {
            width: 50px;
            height: 50px;
        }
    }
}

@keyframes pulse {
    from {
        transform: scale(0.9);
        opacity: 1;
    }
    to {
        transform: scale(1.8);
        opacity: 0;
    }
}


@media (max-width: 400px) {
